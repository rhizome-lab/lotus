{
  "name": "viwo",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*"
  ],
  "private": true,
  "scripts": {
    "dev:server": "bun --filter @viwo/server dev",
    "dev:core": "bun --filter @viwo/core dev",
    "dev:web": "bun --filter @viwo/web dev",
    "dev:discord": "bun --filter @viwo/discord-bot dev",
    "dev:cli": "bun --filter @viwo/admin-cli dev",
    "dev:tui": "bun --filter @viwo/tui dev",
    "db:wipe": "bun --filter @viwo/core db:wipe",
    "viwo-admin": "bun --filter @viwo/admin-cli start",
    "typecheck": "bun --filter '*' typecheck",
    "test": "bun --filter '*' test",
    "lint": "oxlint",
    "format": "oxfmt"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.8",
    "@types/bun": "^1.3.3",
    "@typescript/native-preview": "^7.0.0-dev.20251203.1",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "typescript": "^6.0.0-dev.20251203"
  },
  "overrides": {
    "vite": "8.0.0-beta.0"
  }
}
