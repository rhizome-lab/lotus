{
  "name": "viwo",
  "version": "0.0.0",
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.8",
    "@types/bun": "^1.3.3",
    "@typescript/native-preview": "^7.0.0-dev.20251203.1",
    "knip": "^5.71.0",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "typescript": "^6.0.0-dev.20251203"
  },
  "overrides": {
    "vite": "8.0.0-beta.0",
    "typescript": "next"
  },
  "private": true,
  "scripts": {
    "commit": "bun generate:types && bun format && git add -A && git commit",
    "dev:server": "bun run --cwd apps/server dev",
    "dev:core": "bun run --cwd packages/core dev",
    "dev:web": "bun run --cwd apps/web dev",
    "dev:discord": "bun run --cwd apps/discord-bot dev",
    "dev:cli": "bun run --cwd apps/admin-cli dev",
    "dev:tui": "bun run --cwd apps/tui dev",
    "db:wipe": "bun run --cwd packages/core db:wipe",
    "admin": "bun run --cwd apps/admin-cli start",
    "lint": "oxlint",
    "format": "oxfmt",
    "build:docs": "bun --filter @viwo/docs build && bun --filter @viwo/playground build && cp -r apps/playground/dist docs/.vitepress/dist/playground",
    "dev:docs": "bun scripts/dev-docs.ts",
    "preview:docs": "bun --filter @viwo/docs preview",
    "generate:types": "bun --filter '*' generate:types",
    "benchmark": "bun packages/core/src/benchmark_compiler.ts",
    "check:test": "bun test --only-failures",
    "check:lint": "bun lint",
    "check:format": "bun format --check",
    "check:types": "bun --filter '*' check:types",
    "check:opcodes": "bun --filter @viwo/scripting check:opcodes",
    "check:readmes": "bun scripts/check-readmes.ts",
    "check:unused": "knip",
    "check": "bun --filter '@viwo/op-*' check"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*",
    "docs",
    "ops/*"
  ]
}
