{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/*": {
      "entry": ["src/{index.ts,cli.ts}"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "apps/*": {
      "entry": ["{src/index.ts,src/index.tsx,index.html}"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/shared": {
      "entry": ["src/index.css", "src/jsonrpc.ts", "src/constants/adjectives.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/*.test.ts", "**/*.spec.ts", "docs/**", "**/dist/**", "**/node_modules/**"],
  "ignoreDependencies": ["bun-types"]
}
