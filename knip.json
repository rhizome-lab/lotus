{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/*": {
      "entry": ["src/index.ts", "src/cli.ts"],
      "project": ["src/**/*.ts"]
    },
    "apps/*": {
      "entry": ["src/index.ts", "src/main.tsx", "index.html"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "plugins/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/*.test.ts", "**/*.spec.ts", "docs/**", "**/dist/**", "**/node_modules/**"],
  "ignoreDependencies": ["bun-types", "@types/bun"]
}
