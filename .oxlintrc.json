{
  "plugins": ["typescript", "import", "unicorn"],
  "categories": {
    "correctness": "error",
    "perf": "error",
    "suspicious": "error",
    "pedantic": "error",
    "style": "error",
    "nursery": "error"
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.test.tsx", "*.spec.ts", "*.spec.tsx"],
      "rules": {
        "no-magic-numbers": "off"
      }
    },
    {
      "files": ["**/definitions/*.ts"],
      "rules": {
        "@typescript-eslint/no-unsafe-call": "off",
        "@typescript-eslint/no-unsafe-member-access": "off",
        "@typescript-eslint/no-unsafe-assignment": "off",
        "@typescript-eslint/no-unsafe-argument": "off",
        "@typescript-eslint/no-unsafe-return": "off",
        "@typescript-eslint/no-unsafe-type-assertion": "off"
      }
    },
    {
      "files": ["scripts/*.ts"],
      "rules": {
        "@typescript-eslint/no-unsafe-call": "off",
        "@typescript-eslint/no-unsafe-member-access": "off",
        "@typescript-eslint/no-unsafe-assignment": "off",
        "@typescript-eslint/no-unsafe-argument": "off"
      }
    }
  ],
  "rules": {
    // Disable overly pedantic rules
    "sort-imports": "off",
    "sort-keys": "off",
    "curly": "off",
    "prefer-template": "off",
    "@typescript-eslint/strict-boolean-expressions": "off",
    "@typescript-eslint/no-confusing-void-expression": "off",
    "@typescript-eslint/no-unsafe-type-assertion": "off",
    "@typescript-eslint/restrict-template-expressions": "off",
    "@typescript-eslint/no-unnecessary-type-assertion": "off",
    "unicorn/numeric-separators-style": "off",
    "unicorn/consistent-function-scoping": "off",
    "arrow-body-style": "off",
    "no-await-in-loop": "off",
    "unicorn/catch-error-name": "off",
    "prefer-destructuring": "off",
    "no-duplicate-imports": "off",
    "unicorn/prefer-query-selector": "off",
    "unicorn/prefer-dom-node-text-content": "off",
    "unicorn/prefer-add-event-listener": "off",
    "unicorn/prefer-global-this": "off",
    "no-console": "off",
    "prefer-named-capture-group": "off",
    "no-control-regex": "off",
    "require-unicode-regexp": "off",
    "radix": "off",
    "unicorn/prefer-number-properties": "off",
    // Disable no-unsafe-* rules globally as codebase uses dynamic typing patterns
    "@typescript-eslint/no-unsafe-member-access": "off",
    "@typescript-eslint/no-unsafe-assignment": "off",
    "@typescript-eslint/no-unsafe-argument": "off",
    "@typescript-eslint/no-unsafe-return": "off",
    "@typescript-eslint/no-unsafe-call": "off",
    "@typescript-eslint/array-type": "off",
    "unicorn/explicit-length-check": "off",
    "prefer-optional-catch-binding": "off",
    // Set promise rules to warn for gradual adoption
    "@typescript-eslint/no-floating-promises": "warn",
    "@typescript-eslint/no-misused-promises": "warn",
    "@typescript-eslint/require-await": "off",
    "@typescript-eslint/unbound-method": "off",
    "@typescript-eslint/switch-exhaustiveness-check": "off",
    "unicorn/no-array-for-each": "off",
    "unicorn/no-array-reduce": "off",
    "unicorn/no-array-sort": "off",
    "require-await": "off",

    "no-debugger": "error",
    "eqeqeq": "error",
    "no-plusplus": "error",
    "no-iterator": "error",
    "no-empty": "error",
    "no-proto": "error",
    "no-var": "error",
    "no-void": "error",
    "unicode-bom": "error",
    "import/no-cycle": "error",
    "import/no-amd": "error",
    "import/no-commonjs": "error",
    "import/unambiguous": "error",
    "max-params": ["error", { "max": 4 }],
    "no-namespace": ["error", { "ignore": ["**/lib/*", "lib"] }],
    "oxc/bad-bitwise-operator": "error",
    // This rule does not seem to work.
    "oxc/no-barrel-file": ["error", { "threshold": 1 }],
    "oxc/no-const-enum": "error",
    "promise/catch-or-return": "error",
    "jsdoc/empty-tags": "error",
    "id-length": "off",
    "max-classes-per-file": "off",
    // Conflicts with formatter
    "unicorn/number-literal-case": "off",
    // Actually, avoid default export
    "prefer-default-export": "off",
    // `.filter(x => !!x)` narrows the type to remove falsy values. `.filter(Boolean)` does not.
    "prefer-native-coercion-functions": "off",
    // We want named exports, not default exports
    "import/no-named-export": "off",
    // Grouped exports move export declaration away from the original declaration
    "import/group-exports": "off",
    "import/max-dependencies": "off",
    "func-style": ["off", { "style": "declaration" }],
    "no-nested-ternary": "off",
    "unicorn/no-nested-ternary": "off",
    // TypeScript handles unset declarations
    "init-declarations": "off",
    "unicorn/prefer-spread": "off",
    "unicorn/filename-case": "off",
    // Lonely if is fine, for example to avoid nesting in the else case
    "no-lonely-if": "off",
    "unicorn/no-lonely-if": "off",
    "unicorn/no-array-method-this-argument": "off",
    "unicorn/no-array-callback-reference": "off",
    "max-lines": "off",
    "no-undef": "off",
    "no-null": "off",
    "no-magic-numbers": "off",
    "no-ternary": "off",
    // Negated condition is FINE, but only when the negated branch is very short
    "no-negated-condition": "off",
    "no-continue": "off",
    // This lint needs to be disabled because we have exports that are renamed.
    // These should stay close to the original declarations.
    "import/exports-last": "off",
    // Ideally we would want `"prefer-top-level"`, but ONLY if all imports are type imports
    "import/consistent-type-specifier-style": "off",
    // TODO: This should be fixed
    "max-depth": "off",
    // TODO: This should be fixed
    "max-lines-per-function": "off"
  }
}
